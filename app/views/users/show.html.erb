<h1>Find user details</h1>

<%= render 'shared/user', user: @user %>

<div class='info'>
  <div class='box'>
    <h1>Bio</h1>
    <p>
      <%= @user.bio %>
    </p>
  </div>

  <% @user.recent_posts.each do |post| %>
    <div class='box'>
      <h2><%= link_to post.title, user_post_path(user_id: post.author_id, id: post.id) %></h2>
      <p>
        <%= post.text %>
      </p>
      <p class='counters'>Comments: <%= post.comments_counter %> Likes: <%= post.likes_counter %></p>
    </div>
  <% end %>

  <%= link_to 'Show All', user_posts_path(@user), class: 'show-all btn' %>
  <button type="button" class="create-post btn"><%= link_to "Create Post", new_user_post_path(@user) %></button>
</div>